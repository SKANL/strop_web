---
// DashboardHeader.astro - Header est√°tico del dashboard
import { Badge } from "@/components/ui/badge";

interface Props {
  firstName: string;
  organizationName: string;
  isOnline?: boolean;
}

const { firstName, organizationName, isOnline = true } = Astro.props;
---

<header class="mb-6 flex items-center gap-4">
  <div class="flex items-center gap-2">
    {isOnline && (
      <span class="w-2 h-2 rounded-full bg-success animate-pulse" />
    )}
    <Badge
      variant="outline"
      className="text-xs font-medium px-2 py-0.5 bg-muted"
    >
      {organizationName}
    </Badge>
  </div>
  <h1 class="text-xl md:text-2xl font-bold text-foreground">
    Hola, {firstName}
  </h1>
</header>
