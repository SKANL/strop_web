    firstName={firstName} 
    organizationName={mockOrganizationUI.name} 
  />

  {/* KPIs Grid Est치tico (sin JS) */}
  <section class="mb-6">
    <KPIGrid data={mockKPIs} />
  </section>

  {/* Tabs Interactivos - client:load (interacci칩n principal) */}
  <DashboardTabs client:load />
</DashboardLayout>
