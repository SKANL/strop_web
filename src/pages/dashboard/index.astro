---
// dashboard/index.astro - Dashboard minimalista centrado en incidencias
import DashboardLayout from "@/layouts/DashboardLayout.astro";
import DashboardHeader from "@/features/dashboard/components/DashboardHeader.astro";
import { IncidentsDashboard } from "@/features/dashboard/components/IncidentsDashboard";
import { mockCurrentUserUI, mockOrganizationUI } from "@/lib/mock";

const firstName = mockCurrentUserUI.name.split(" ")[0];
---

<DashboardLayout title="Dashboard | Strop" description="Panel de control ejecutivo para Strop">
  {/* Header Est√°tico (sin JS) */}
  <DashboardHeader 
    firstName={firstName} 
    organizationName={mockOrganizationUI.name} 
  />

  {/* Dashboard Minimalista centrado en Incidencias */}
  <IncidentsDashboard client:load />
</DashboardLayout>
